include /node_modules/scp-ng-gulp/resources/pug/mixins/form

form(ng-submit="modal.submit()")
  .modal-header
    button.close(
      type="button"
      ng-click="modal.$dismiss()"
    ) &times;

    h4.modal-title(data-translate="pkg.abuse.admin.report.modal.reply.TITLE")

  .modal-body.form-horizontal
    +textarea("pkg.abuse.admin.report.modal.reply.LABEL")(
      ng-model="modal.comment"
    )

  .modal-footer
    button.btn.btn-secondary(
      type="button"
      ng-click="modal.$dismiss()"
      data-translate="pkg.abuse.admin.report.modal.reply.CANCEL"
    )
    button.btn.btn-primary(
      type="submit"
      data-translate="pkg.abuse.admin.report.modal.reply.SUBMIT"
    )
