include /node_modules/scp-ng-gulp/resources/pug/mixins/form

form(ng-submit="modal.submit()")
  .modal-header
    button.close(
      type="button"
      ng-click="modal.$dismiss()"
    ) &times;

    h4.modal-title(data-translate="pkg.abuse.admin.report.modal.assign.TITLE")

  .modal-body.form-horizontal
    +label("{{ 'pkg.abuse.admin.report.modal.assign.client.LABEL' | translate }}")
      +input-with-btn("fa fa-times-circle")(
        ng-click="modal.client.selected = null;modal.client.fireChangeEvent()"
      )
        ui-select(ng-model="modal.client.selected", ng-change="modal.client.fireChangeEvent()")
          ui-select-match(placeholder="{{ 'pkg.abuse.admin.report.modal.assign.client.PLACEHOLDER' | translate }}")
            | {{ $select.selected.name }}

          ui-select-choices(
            repeat="client in modal.client.items track by client.id"
            refresh="modal.client.load($select.search)"
            refresh-delay="400"
          )
            span(ng-bind-html="client.name | highlight: $select.search")
            small &lt;{{client.email}}&gt;

  .modal-footer
    button.btn.btn-secondary(
      type="button"
      ng-click="modal.$dismiss()"
      data-translate="pkg.abuse.admin.report.modal.assign.CANCEL"
    )
    button.btn.btn-primary(
      type="submit"
      data-translate="pkg.abuse.admin.report.modal.assign.SUBMIT"
    )
