include mixins/table

list(
  list="list"
  panel="false"
)
  +table().table-hover
    thead
      tr
        th.checkbox-col
          list-check-all
        block headings
    tbody
      tr(
        ng-repeat="row in list.items track by row.id"
        ng-click="row.checked = !row.checked"
      )
        td.checkbox-col
          list-check-item(
            checked="row.checked"
          )
        block columns
  list-footer
